rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Règle pour les photos des actifs
    match /photos/{assetId}/{filename} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
                   &&TcVcrequest.resource.size < 5 * 1024 * 1024 // Max 5Mo
                   && request.resource.contentType.matches('image/.*');
    }
    
    // Logo entreprise
    match /company/{filename} {
      allow read: if true;
      allow write: if request.auth != null; // Idéalement isAdmin() mais auth suffit pour commencer
    }
  }
}